<script>
const ORDER_WHATSAPP="201275855053";

const products=[
{id:1,name:"هودي سادة أسود - O S A",price:400,img:"img1.jpg"},
{id:2,name:"هودي سادة رمادي - O S A",price:400,img:"img2.jpg"},
{id:3,name:"هودي مطبوع لوجو أبيض",price:500,img:"img3.jpg"},
{id:4,name:"هودي مطبوع لوجو أسود",price:500,img:"img4.jpg"}
];

let cart=[];

lucide.createIcons();

function renderProducts(){
document.getElementById("product-list").innerHTML=
products.map(p=>`
<div class="product-card">
<div class="product-image-wrapper">
<img src="${p.img}" class="product-image">
</div>
<div class="product-info">
<div class="product-name">${p.name}</div>
<div class="product-price">${p.price} جنيه</div>
<select id="size-${p.id}">
<option value="">اختر المقاس</option>
<option>M</option><option>L</option><option>XL</option><option>2XL</option>
</select>
<button class="add-btn" onclick="addToCart(${p.id},this)">
<i data-lucide="shopping-cart"></i> أضف للسلة
</button>
</div>
</div>`).join("");
lucide.createIcons();
}

function addToCart(id,btn){
const size=document.getElementById(`size-${id}`).value;
if(!size){alert("من فضلك اختر المقاس");return;}
const p=products.find(x=>x.id===id);
cart.push({...p,size,uid:Date.now()});
btn.textContent="تمت الإضافة ✓";
btn.style.background="var(--green)";
setTimeout(()=>{btn.textContent="أضف للسلة";btn.style.background="#000"},800);
}

function showSection(s){
["home","checkout","policy"].forEach(x=>{
document.getElementById(x+"-section").classList.add("hidden");
document.getElementById("nav-"+(x==="home"?"home":x==="checkout"?"cart":"policy")).classList.remove("active");
});
document.getElementById(s+"-section").classList.remove("hidden");
document.getElementById("nav-"+(s==="home"?"home":s==="checkout"?"cart":"policy")).classList.add("active");
if(s==="checkout")renderCart();
}

function renderCart(){
const c=document.getElementById("cart-container");
const empty=document.getElementById("empty-cart");
if(!cart.length){c.innerHTML="";empty.classList.remove("hidden");return;}
empty.classList.add("hidden");
let total=0;
c.innerHTML=cart.map(i=>{
total+=i.price;
return `<div class="cart-item">${i.name} (${i.size}) - ${i.price}ج</div>`;
}).join("")+`<strong>الإجمالي: ${total} جنيه</strong>`;
}

function confirmOrder(){
let name=document.getElementById("cust-name").value;
let phone=document.getElementById("cust-phone").value;
if(!name||!phone){alert("أكمل البيانات");return;}
let msg=`طلب جديد\nالاسم:${name}\nالموبايل:${phone}\n`;
cart.forEach((i,n)=>msg+=`\n${n+1}- ${i.name} (${i.size})`);
window.open(`https://wa.me/${ORDER_WHATSAPP}?text=${encodeURIComponent(msg)}`);
}

window.onload=renderProducts;
</script>

</body>
